//第一题
func order(array: [Int]) -> [Int] {
    let ordered = array.sorted(by:>)
    return ordered
}

//第二题
struct Point {
    var x = 0.0, y = 0.0
}
struct Size {
    var width = 0.0
    var length = 0.0
}
struct Rectangle {
    var point = Point()
    var size = Size()
    var perimeter: Double {
            get {
                let C = (size.length + size.width) * 2
                return perimeter
        }
        }
    var center: Point {
        get {
            let centerX = point.x + (size.width/2)
            let centerY = point.y + (size.length)
            return Point(x: centerX, y: centerY)
        }
    }
    var area: Double {
        get {
            let S = size.length * size.width
            return area
        }
}
    static func zuobiao(x: Rectangle) -> [(Double,Double)] {
        let a = (0.0, 0.0)
        let b = (0.0 + x.size.width,0.0)
        let c = (0.0 + x.size.width,0.0 + x.size.length)
        let d = (0.0,0.0 + x.size.length)
        return [a,b,c,d]
    }
    static func PremeterGap(C1: Rectangle, C2: Rectangle) -> Double {
        return (abs(C1.perimeter - C2.perimeter))
    }
    static func AreaGap(S1: Rectangle, S2: Rectangle) -> Double {
    return (abs(S1.area - S2.area))
    }
}
//第三题
class Person {
    var name: String
    var gender: String
    var age: Int
    var height: Int
    init(name: String, gender: String, age: Int, height: Int) {
        self.name = name
        self.gender = gender
        self.age = age
        self.height = height
    }
}
class Student : Person {
    var grade: Int
    var major: String
    var weighting: Int
    init(grade: Int,major: String,weighting: Int) {
        self.grade = 1
        self.major = "computing"
        self.weighting = 0
        super.init(name: "雷金洲", gender: "male", age: 19, height: 170)
    }
}
class Teacher : Person {
    var teachingSubject: String
    var height: Int
    var weight: Int
    static func BMI(x:Int) -> Int {
        var x = height / (weight ^ 2)
        return x
    }
    static func HeightGap(H1: Student, H2: Student) -> Int {
        return (abs(H1.height - H2.height))
    }
    static func AverageWeighting(Mark1: Student, Mark2: Student) -> Int {
        return (abs(Mark1.weighting - Mark2.weighting))
    }
    init(teachingSubject: String, weight: Int) {
        self.teachingSubject = teachingSubject
        self.weight = weight
        super.init(name: "曹学广", gender: "male", age: 40, height: 173)
        
    }
}
